---
const { link, title } = Astro.props;
---

<a href={link}>{title}</a>

<style>
  a {
    text-decoration: none;
    text-transform: capitalize;
    font-weight: 600;
    padding: 1em 25px 1em 25px;
    position: relative;
    display: inline-block;
    margin: auto;
    text-decoration: none;
    cursor: pointer;
    border: 1px solid var(--gray-light);
    border-radius: 8px;
    height: 2.8em;
    width: 10em;
    padding: 0;
    outline: none;
    overflow: hidden;
    color: var(--gray-light);
    transition: color 0.3s 0.1s ease-out;
    text-align: center;
    line-height: 250%;
    z-index: 2;

    &::before {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      margin: auto;
      content: "";
      border-radius: 50%;
      display: block;
      width: 20em;
      height: 20em;
      line-height: 20em;
      left: -5em;
      text-align: center;
      transition: box-shadow 0.5s ease-out;
      z-index: -1;
    }

    &:hover {
      color: #fff;
      &::before {
        box-shadow: inset 0 0 0 10em var(--green);
      }
    }
  }
</style>
