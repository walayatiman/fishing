---
import bg from "./img/trial.jpg";
const background = bg.src;
---

<section style=`background-image:url("${background}")`>
  <div class="container">
    <div class="content">
      <h2>Start your free trial</h2>
      <form>
        <input
          type="text"
          id="name"
          name="name"
          required
          minlength="4"
          maxlength="8"
          size="10"
        />
        <input class="styled" type="button" value="Get a qoute" />
      </form>
      <p class="message">
        Test out our Analytics features for 14 days, no credit card required.
      </p>
    </div>
  </div>
</section>

<style>
  .container {
    padding: 5% 1em;
    color: #fff;

    @media (max-width: 500px) {
      padding: 25% 2em;
    }

    h2 {
      font-size: clamp(20px, 3vw, 30px);
      font-weight: bold;
      text-align: left;
      margin-bottom: 1em;
    }

    .content {
      max-width: 700px;
      margin-right: 0;
      margin-left: auto;
      padding: 10% 0;

      .message {
        max-width: 30em;
        line-height: 1.7em;
        font-size: 14px;
      }

      form {
        margin-bottom: 1em;
        #name {
          width: 30em;
          border-radius: 30em;
          border: none;
          padding: 10px;
          background-color: #1e1e1e;
          color: #fff;
        }

        .styled {
          padding: 10px 25px;
          border-radius: 30em;
          border: none;
          margin-left: 1em;
          cursor: pointer;
        }
      }
    }
  }

  section {
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;

    &::after {
      content: "";
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      background: linear-gradient(
        124deg,
        rgba(60, 59, 110, 0) 38%,
        rgba(14, 49, 76, 1) 38%
      );
      z-index: 1;
      opacity: 1;
    }
  }
</style>
