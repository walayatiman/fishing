<style>
  .container {
    margin-top: 5%;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3em;
    margin-bottom: 5%;

    .col2 {
      display: flex;
      flex-direction: column;
      justify-content: space-between;

      a {
        background-color: var(--blue);
      }
      h6 {
        text-transform: uppercase;
        font-size: 12px;
      }

      h3 {
        font-size: 2.2rem;
        text-transform: capitalize;
        font-weight: bold;
        color: var(--green);
        margin-bottom: 15px;
        max-width: 350px;
      }

      .blurb {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
        h4 {
          font-size: 1.5rem;
          font-weight: 500;
          color: var(--blue);
          margin-bottom: 10px;
          text-transform: capitalize;
        }

        svg {
          width: 50px;
          height: 50px;

          path {
            stroke: var(--green);
            path: var(--blue);
          }
        }
      }
    }
  }
</style>
