---
import ImagePicture from "../../../components/ImagePicture.astro";
import AboutUsImg from "./images/aboutUs.png";
---

<section id="what-we-do">
  <div class="container">
    <h6>what we do</h6>
    <h3>Fresh Ideas for Every Business</h3>
    <div class="content-container">
      <div class="col col1">
        <ImagePicture item={AboutUsImg} alt="About us" />
      </div>
      <div class="col col2">
        <div class="card">
          <div class="icon">
            <svg
              class="w-6 h-6 text-gray-800 dark:text-white"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 5.464V3.099m0 2.365a5.338 5.338 0 0 1 5.133 5.368v1.8c0 2.386 1.867 2.982 1.867 4.175C19 17.4 19 18 18.462 18H5.538C5 18 5 17.4 5 16.807c0-1.193 1.867-1.789 1.867-4.175v-1.8A5.338 5.338 0 0 1 12 5.464ZM6 5 5 4M4 9H3m15-4 1-1m1 5h1M8.54 18a3.48 3.48 0 0 0 6.92 0H8.54Z"
              ></path>
            </svg>
          </div>
          <div class="content">
            <h2>Guaranteed Success</h2>
            <p>
              Ea pro tibique comprehensam, sed ea verear numquam molestie. Nam
              te omittam comprehensam.
            </p>
          </div>
        </div>
        <div class="card">
          <div class="icon">
            <svg
              class="w-6 h-6 text-gray-800 dark:text-white"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="m12 18-7 3 7-18 7 18-7-3Zm0 0v-5"></path>
            </svg>
          </div>
          <div class="content">
            <h2>SEO Optimization</h2>
            <p>
              Ea pro tibique comprehensam, sed ea verear numquam molestie. Nam
              te omittam comprehensam.
            </p>
          </div>
        </div>
        <div class="card">
          <div class="icon">
            <svg
              class="w-6 h-6 text-gray-800 dark:text-white"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              fill="none"
              viewBox="0 0 24 24"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 4H4m0 0v4m0-4 5 5m7-5h4m0 0v4m0-4-5 5M8 20H4m0 0v-4m0 4 5-5m7 5h4m0 0v-4m0 4-5-5"
              ></path>
            </svg>
          </div>
          <div class="content">
            <h2>creative approach</h2>
            <p>
              Ea pro tibique comprehensam, sed ea verear numquam molestie. Nam
              te omittam comprehensam.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .container {
    text-align: center;
    margin-top: 10%;

    h6 {
      text-transform: uppercase;
      font-size: 12px;
    }

    h3 {
      font-weight: bold;
      font-size: 2rem;
    }
  }
  .content-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3em;
    margin-top: 3rem;

    .col2 {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .card {
      display: flex;
      gap: 1rem;
      text-align: left;
      align-items: center;
      svg {
        height: 75px;
        display: block;
        position: relative;
        width: 75px;

        path {
          stroke: var(--blue);
          fill: var(--green);
        }
      }

      .content {
        h2 {
          font-size: 18px;
          margin-bottom: 5px;
          color: var(--green);
          text-transform: capitalize;
          font-weight: 500;
        }

        p {
          font-size: 12px;
          line-height: normal;
        }
      }
    }
  }
</style>
