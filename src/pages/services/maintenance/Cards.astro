---
import ImagePicture from "../../../components/ImagePicture.astro";
import First from "./images/img_box_01.png";
import Second from "./images/img_box_02.png";
import Third from "./images/img_box_03.png";

const data = [
  {
    image: First,
    title: "seo consultancy",
    content:
      "Delectus recteque has ne, no pro tation commodo. Ea libris utamur vix, in sumo augue soluta vis.",
  },
  {
    image: Second,
    title: "competitor analysis",
    content:
      "Delectus recteque has ne, no pro tation commodo. Ea libris utamur vix, in sumo augue soluta vis.",
  },

  {
    image: Third,
    title: "social media marketing",
    content:
      "Delectus recteque has ne, no pro tation commodo. Ea libris utamur vix, in sumo augue soluta vis.",
  },
];
---

<div class="cards-container">
  <div class="container">
    {
      data.map((e, index) => (
        <div class={`card card-${index}`}>
          <ImagePicture item={e.image} alt="maintenance icons" />
          <h3>{e.title}</h3>
          <p>{e.content}</p>
        </div>
      ))
    }
  </div>
</div>

<style>
  .container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3em;
    margin-top: 3rem;

    @media (min-width: 1280px) {
      margin-top: -5rem;
    }

    .card {
      padding: 4rem 2rem;
      box-shadow: 0 0 10px rgba(46, 59, 125, 0.23);
      border-radius: 25px;

      .picture-container {
        max-width: 150px;
        margin-inline: auto;
        margin-bottom: 1rem;
        min-height: 150px;
      }

      h3 {
        text-transform: capitalize;
        font-size: 1.5rem;
        text-align: center;
        margin-bottom: 15px;
      }

      p {
        color: var(--blue);
        text-align: center;
      }
    }

    .card-0 {
      background-color: rgb(249, 248, 255);
    }
    .card-1 {
      background-color: rgb(255, 252, 246);
    }

    .card-2 {
      background-color: rgb(240, 255, 252);
    }
  }
</style>
